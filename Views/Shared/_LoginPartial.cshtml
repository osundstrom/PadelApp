@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav ms-auto d-flex flex-row align-items-center ">
    <!-- Om inloggad -->
@if (SignInManager.IsSignedIn(User)){
    
    <li class="nav-item">
        <a  class="btn btn-success me-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profil</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Public", new { area = "" })">
            <button  type="submit" class="btn btn-danger me-2">Logga ut</button>
        </form>
    </li>
    
}
 <!-- Om ej inloggad -->
else{
    
    <li class="nav-item">
        <a class="btn btn-secondary me-2" asp-area="Identity" asp-page="/Account/Register">Registrera</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-success me-2" asp-area="Identity" asp-page="/Account/Login">Logga in</a>
    </li>
    
}
</ul>
